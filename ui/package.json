{
  "name": "eightyish",
  "version": "0.0.1",
  "description": "A CPU-/Computer simulator of the '80s. For educational purposes only",
  "repository": "https://github.com/untoldwind/eightyish",
  "license": "MIT",
  "config": {
    "buildDir": "./dist"
  },
  "scripts": {
    "build": "NODE_ENV=production npm run webpack",
    "clean": "rimraf $npm_package_config_buildDir && mkdir $npm_package_config_buildDir",
    "lint": "eslint --ext .js ./src && echo No linting errors.",
    "prebuild": "npm run clean",
    "prestart": "npm install",
    "start": "NODE_ENV=development webpack-dev-server",
    "dev-server": "NODE_ENV=development webpack-dev-server",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch:test": "nodemon -w __tests__ -w ./src -e js -x npm run coverage",
    "watch": "webpack --watch",
    "webpack": "webpack --colors --progress",
    "nightwatch": "node specs/nightwatch.js --config specs/nightwatch.json"
  },
  "dependencies": {
    "babel": "^5.8.23",
    "babel-runtime": "^5.8.20",
    "bootstrap-less": "^3.3.8",
    "flux": "^2.1.1",
    "react": "^0.13.3",
    "react-overlays": "^0.4.4",
    "react-router": "^0.13.3"
  },
  "devDependencies": {
    "babel-core": "^5.8.23",
    "babel-eslint": "^4.1.0",
    "babel-jest": "^5.3.0",
    "babel-loader": "^5.3.2",
    "chromedriver": "^2.18.0",
    "css-loader": "^0.16.0",
    "eslint": "^1.3.1",
    "eslint-plugin-react": "^3.3.0",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.4",
    "html-loader": "^0.3.0",
    "jest-cli": "^0.5.0",
    "less": "^2.5.1",
    "less-loader": "^2.2.0",
    "nightwatch": "^0.7.11",
    "node-libs-browser": "^0.5.2",
    "nodemon": "^1.4.1",
    "npm-check-updates": "^2.2.0",
    "rimraf": "^2.4.3",
    "selenium-server": "^2.47.1",
    "style-loader": "^0.12.3",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.0",
    "webpack-dev-server": "^1.10.1",
    "yadda": "^0.15.2"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "setupEnvScriptFile": "<rootDir>/jestEnvironment.js",
    "testFileExtensions": [
      "es6",
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ],
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules"
    ]
  }
}
